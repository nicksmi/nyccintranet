name = Intranet
description = Comes with a well organized Sass setup with heavy use of partials.
base theme = omega
screenshot = screenshot.png
engine = phptemplate
core = 7.x

; Styles
stylesheets[all][] = css/intranet.normalize.css
stylesheets[all][] = css/intranet.hacks.css
stylesheets[all][] = css/intranet.styles.css
stylesheets[all][] = css/intranet.no-query.css
stylesheets[all][] = css/font-awesome.min.css

; Scripts
scripts[] = js/intranet.behaviors.js
scripts[] = js/intranet.global.js
scripts[] = js/bootstrap.min.js
scripts[] = js/jquery.placeholder.js

; Regions
regions[help]           = Help
regions[content]        = Content
regions[footer]         = Footer

regions[topsearch]		= Top Search
regions[topmenu]		= Top Menu
regions[topbar]			= Top Bar

regions[home_news]		= Home News Summary
regions[home_right]		= Home Column Right
regions[home_main]		= Home Main Column
regions[home_full] 		= Full Width Column

regions[3_col_left]		= 3 Col Left Column
regions[3_col_right]	= 3 Col Right Column
regions[3_col_center]	= Center Column

regions[2_col_right]	= 2 Col Right Column
regions[header] 		= Header


; Layout Styles
layout[standard3col][stylesheets][all][] = css/layouts/standard3col/intranet-standard3col.layout.css
layout[standard2col][stylesheets][all][] = css/layouts/standard2col/intranet-standard2col.layout.css
layout[home][stylesheets][all][] = css/layouts/home/intranet-home.layout.css
layout[fullwidth][stylesheets][all][] = css/layouts/fullwidth/intranet-fullwidth.layout.css
layout[basic-centred][stylesheets][all][] = css/layouts/basic-centred/basic-centred.layout.css
layout[home3col][stylesheets][all][] = css/layouts/home3col/home3col.layout.css
layout[service-news][stylesheets][all] = css/layouts/service-home/service-home.layout.css

;Plugins
plugins[advanced_forum][styles] = 'theme/advanced_forum'


settings[responsive_menu_enable_width] = 960
settings[carousel_speed] = 5000